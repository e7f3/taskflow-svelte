{
  "name": "taskflow",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:firefox": "BROWSER=firefox vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint . --ext .js,.ts,.svelte",
    "lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
    "lint:css": "stylelint \"**/*.{css,svelte}\"",
    "lint:css:fix": "stylelint \"**/*.{css,svelte}\" --fix",
    "format": "pnpm lint:fix && pnpm lint:css:fix",
    "test": "vitest run --project=unit",
    "test:watch": "vitest --project=unit",
    "test:ui": "vitest --ui --project=unit",
    "test:storybook": "vitest run --project=storybook",
    "test:all": "vitest run",
    "storybook": "storybook dev -p 6006",
    "storybook:firefox": "BROWSER=firefox storybook dev -p 6006",
    "build-storybook": "storybook build",
    "pr:description": ".github/scripts/generate-pr-description.sh",
    "pr:create": ".github/scripts/create-pr.sh",
    "pr:task": ".github/scripts/generate-task-pr.sh",
    "pr:task:create": ".github/scripts/create-task-pr.sh"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/addon-vitest": "^10.0.8",
    "@storybook/svelte-vite": "^10.0.8",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/browser-playwright": "4.0.8",
    "@vitest/coverage-v8": "4.0.8",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.13.0",
    "jsdom": "^27.1.0",
    "playwright": "^1.56.1",
    "postcss-html": "^1.8.0",
    "storybook": "^10.0.8",
    "stylelint": "^16.25.0",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "svelte": "^5.17.0",
    "svelte-check": "^4.1.1",
    "svelte-eslint-parser": "^1.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.46.4",
    "vite": "^6.0.7",
    "vitest": "^4.0.8"
  }
}
